<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF5F5"
    tools:context=".Home_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#E5E5E5"
        android:orientation="vertical">

        <!-- Top Section with Logo and Cart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Larger Logo -->
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/my_logo" />

            <!-- Cart Icon -->
            <ImageView
                android:id="@+id/cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/cart_notfilled" />
        </LinearLayout>

        <!-- Gender Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Women Section -->
            <TextView
                android:id="@+id/women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="WOMEN"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="italic"
                android:paddingEnd="8dp" /> <!-- Slight padding for spacing -->

            <!-- Divider -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="#000000"
                android:textSize="20sp" />

            <!-- Men Section -->
            <TextView
                android:id="@+id/men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="MEN"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="italic"
                android:paddingStart="8dp" /> <!-- Slight padding for spacing -->
        </LinearLayout>

        <!-- Clothing Section -->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="235dp"
            android:layout_height="126dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/clothing" />

        <Button
            android:id="@+id/clothing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#000000"
            android:text="CLOTHING"
            android:textColor="#FFFFFF"
            app:cornerRadius="10dp" />

        <!-- Footwear Section -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="227dp"
            android:layout_height="161dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/footwear" />

        <Button
            android:id="@+id/footwear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#000000"
            android:text="FOOTWEAR"
            android:textColor="#FFFFFF"
            app:cornerRadius="10dp" />

    </LinearLayout>
</FrameLayout>
