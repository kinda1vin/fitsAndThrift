<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_primary_custom</item>
        <item name="colorPrimaryVariant">@color/my_primary_custom</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fits_n_thrift</item>
        <item name="colorSecondaryVariant">@color/fits_n_thrift</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/offwhite</item>
    </style>

    <style name="CustomInputField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/input_field_background</item>
        <item name="android:textColor">@color/black</item> <!-- Change text color if necessary -->
    </style>

</resources>
